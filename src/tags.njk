---
layout: page
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - writing
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "Tagged: {{ tag }}"
---

{% from "macros.njk" import teaser %}
{% set taglist = collections[tag] %}

<div class="stack" typeof="schema:Blog">
  {% for item in taglist | selectattr('url') | reverse %}
    {{ teaser(item) }}
  {% endfor %}
</div>
