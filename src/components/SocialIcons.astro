---
import { SITE_EMAIL } from "../consts.ts";

const links = [
  {
    href: `mailto:${SITE_EMAIL}`,
    icon: "email",
    alt: "Email",
  },
  {
    href: "https://github.comm/ok-steve",
    icon: "github",
    alt: "GitHub",
  },
];
---

<ul class="cluster" role="list">
  {
    links.map(({ href, icon, alt }) => (
      <li>
        <a class="[ icon ][ fz-3 ]" href={href}>
          <img src={`/img/icon/${icon}.svg`} alt={alt} width="24" height="24" />
        </a>
      </li>
    ))
  }
</ul>
