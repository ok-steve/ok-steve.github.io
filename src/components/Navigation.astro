---
import { getContent, capitalize, slugify } from "../utils";

const posts = await getContent("posts");

const tags = Array.from(
  new Set(posts.map((post: any) => post.data.tags).flat()),
).sort();
---

<nav class="fz-2 ff-display" role="navigation">
  <ul class="cluster cluster--center" role="list">
    {
      tags.map((tag) => (
        <li>
          <a href={`/tags/${slugify(tag)}/`}>{capitalize(tag)}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    text-transform: uppercase;
  }
</style>
