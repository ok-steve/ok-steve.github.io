---
permalink: site.webmanifest
---
{
  "name": "{{ site.name }}",
  "short_name": "{{ site.name }}",
  "description": "{{ site.description }}",
  "start_url": "{{ '/' | url }}",
  "scope": "{{ '/' | url }}",
  "display": "minimal-ui",
  "icons": [
    {
      "src": "{{ '/public/img/icon-192.png' | url }}",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ '/public/img/icon-512.png' | url }}",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "theme_color": "{{ site.color }}",
  "background_color": "#ffffff"
}
