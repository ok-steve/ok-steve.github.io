---
layout: writing.njk
---
{{ content | safe }}

<hr>

{% macro syntaxhighlight(code) %}
  {% if code.code %}
    <details>
      <summary>{{ code.lang | upper }}</summary>
      {% highlight code.lang %}
        {{ code.code | safe }}
      {% endhighlight %}
    </details>
  {% endif %}
{% endmacro %}

{{ syntaxhighlight(html) }}
{{ syntaxhighlight(css) }}
{{ syntaxhighlight(js) }}

<div class="aspect-ratio border-1">
  <iframe class="aspect-ratio__object" src="{{ 'embed.html' | url }}"></iframe>
</div>

<p><a href="{{ 'embed.html' | url }}" data-router-ignore>View fullscreen</a></p>
