---
layout: writing.njk
---
{{ content | safe }}

<hr>

{% macro syntaxhighlight(code) %}
  {% if code.code %}
    <details typeof="schema:SoftwareSourceCode">
      <summary property="schema:programmingLanguage">{{ code.lang | upper }}</summary>
      {% highlight code.lang %}
        {{ code.code | safe }}
      {% endhighlight %}
    </details>
  {% endif %}
{% endmacro %}

{{ syntaxhighlight(html) }}
{{ syntaxhighlight(css) }}
{{ syntaxhighlight(js) }}

<div class="[ aspect-ratio ] [ border ]">
  <iframe src="{{ 'embed.html' | url }}"></iframe>
</div>

<p><a href="{{ 'embed.html' | url }}" data-router-ignore>View fullscreen</a></p>
