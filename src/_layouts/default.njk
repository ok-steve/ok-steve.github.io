<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{{ title or site.name }} | {{ site.name }}</title>
    <meta
      name="description"
      content="{{ page.excerpt | default(content) | default(site.description) | striptags | truncate(160) }}"
    />

    <link rel="icon" href="{{ '/public/img/favicon.ico' | url }}" size="any" />
    <link
      rel="icon"
      href="{{ '/public/img/icon.svg' | url }}"
      type="image/svg+xml"
    />
    <link
      rel="apple-touch-icon"
      href="{{ '/public/img/apple-touch-icon.png' | url }}"
    />
    <link
      rel="apple-touch-startup-image"
      href="{{ '/public/img/icon-512.png' | url }}"
    />
    <meta name="apple-mobile-web-app-title" content="{{ site.name }}" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <link rel="manifest" href="{{ '/site.webmanifest' | url }}" />
    <meta name="theme-color" content="{{ site.color }}" />

    <link rel="canonical" href="{{ site.url }}{{ page.url }}" />
    <link rel="alternate" type="application/atom+xml" title="{{ site.name }}" href="{{ '/feed.xml' | url }}">

    <link
      rel="stylesheet"
      href="https://stevecherry.net/normcore/css/normcore.css"
    />
    <link rel="stylesheet" href="{{ '/public/syntax-highlighting.css' | url }}" media="screen" />
    <link rel="stylesheet" href="{{ '/public/style.css' | url }}" media="screen" />
    <link rel="stylesheet" href="{{ '/public/print.css' | url }}" media="print" />

    <script src="{{ '/public/script.js' | url }}" defer></script>
  </head>
  <body typeof="schema:WebPage">
    <div class="[ router ] [ cover stack ]">
      <header class="[ row ] [ pi ]" role="banner">
        <a href="{{ '/' | url }}" class="scale-3">{{ site.name }}</a>

        <nav role="navigation">
          <ul class="cluster" role="list">
            {% for entry in collections.all | eleventyNavigation %}
              <li>
                <a href="{{ entry.url | url }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      </header>

      <main class="[ router__view ] [ container stack ] [ flex-1 fluid-type pi ]" role="main">
        {% block content %}
          {% if not page.url == '/' %}
            <h1 property="schema:name">{{ title }}</h1>
          {% else %}
            {# For the home page, assumes all other pages will have a title #}
            <h1 hidden aria-hidden="false" property="schema:name">{{ title or site.name }}</h1>
          {% endif %}

          <div class="schema:mainContentOfPage">
            {{ content | safe }}
          </div>
        {% endblock %}
      </main>

      <footer class="[ row ] [ pi pbe-01 ]" role="contentinfo">
        <p>{{ site.description }}</p>

        <ul class="[ icon-list ] [ cluster ]" role="list">
          <li>
            <a href="{{ '/feed.xml' | url }}">
              {% include "icons/rss.njk" %}
            </a>
          </li>
          <li>
            <a href="mailto:{{ site.author.email }}">
              {% include "icons/email.njk" %}
            </a>
          </li>
          <li>
            <a href="https://github.com/{{ site.github_username }}">
              {% include "icons/github.njk" %}
            </a>
          </li>
        </ul>
      </footer>
    </div>

    <script defer>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('{{ '/sw.js' | url }}', {
          scope: '{{ '/' | url }}',
        });
      }
    </script>
  </body>
</html>
