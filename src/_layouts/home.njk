---
layout: default.njk
---
<div class="flow">
  <h1 hidden aria-hidden="false">{{ title or site.name }}</h1>

  {{ content | safe }}

  {% for post in collections.posts | published | reverse %}
    <article class="flow" resource="{{ post.url | url }}" typeof="schema:BlogPosting">
      <header>
        <h2><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
      </header>

      {{ post.data.content | excerpt | safe }}
    </article>
  {% endfor %}
</div>
