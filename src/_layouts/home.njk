---
layout: default.njk
---

{{ content | safe }}

{% for post in collections.posts | published | reverse %}
  <article class="flow pi-2" resource="{{ post.url | url }}" typeof="schema:BlogPosting">
    <header>
      <h2><a href="{{ post.url | url }}">{{ post.data.title }}</a></h2>
    </header>

    {% markdown %}
      {{ post.data.page.excerpt }}
    {% endmarkdown %}
  </article>
{% endfor %}
