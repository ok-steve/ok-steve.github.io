---
layout: base
---

<article class="stack">
  {% if title %}
    <header>
      <h1>{{ title }}</h1>
    </header>
  {% endif %}

  <div class="[ text ] [ stack ]">
    <p>
      <time datetime="{{ date.toISOString() }}">{{ date.toLocaleDateString('en-US') }}</time>
    </p>

    {{ content | safe }}
  </div>
</article>
