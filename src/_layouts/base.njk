---
layout: default
---

<div class="cluster cluster-center">
  <header role="banner">
    <a href="/" rel="home" class="fz-3">{{ site.name }}</a>
  </header>

  {% include "navigation.njk" %}
</div>

<main class="[ stack ] [ fx-auto ]" role="main">
  {{ content | safe }}
</main>

<footer class="[ cluster cluster-center ] [ pb-05 ]" role="contentinfo">
  <p>{{ pkg.description }}</p>

  <ul class="[ icon-list ] [ cluster ]" role="list">
    {# <li>
      <a href="/feed.xml">
        {% include "icons/rss.njk" %}
      </a>
    </li> #}
    <li>
      <a href="mailto:{{ pkg.author.email }}">
        {% include "icons/email.njk" %}
      </a>
    </li>
    <li>
      <a href="https://github.com/{{ site.github_username }}">
        {% include "icons/github.njk" %}
      </a>
    </li>
  </ul>
</footer>
