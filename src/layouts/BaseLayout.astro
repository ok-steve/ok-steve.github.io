---
import { site } from "../config";
import CommonHead from "../components/CommonHead.astro";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";
import SocialIcons from "../components/SocialIcons.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en-US">
  <head>
    <CommonHead title={title} description={description} />
  </head>
  <body class="[ center cover ] [ py--1 ]" typeof="schema:WebPage">
    <Header title={site.name} />

    {import.meta.env.DEV && <Navigation />}

    <main class="cover-start stack" role="main">
      <slot />
    </main>

    <footer class="cluster cluster--center" role="contentinfo">
      <p>{site.description}</p>
      <SocialIcons />
    </footer>
  </body>
</html>
