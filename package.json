  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-footnote": "^3.0.2",
    "normalize-opentype.css": "^0.2.4",
