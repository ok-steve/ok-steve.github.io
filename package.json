{
  "name": "sccherry.github.io",
  "private": true,
  "version": "1.0.0",
  "description": "The online home of Steve Cherry",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint:css": "stylelint src/css --fix",
    "lint:js": "eslint src/js --fix",
    "lint": "npm run lint:css & npm run lint:js",
    "build:site": "eleventy --config eleventy.config.js",
    "build:css": "postcss src/css/main.css -o dist/css/main.css",
    "build": "ELEVENTY_ENV=production npm run build:site && NODE_ENV=production npm run build:css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build:site -- --serve & npm run build:css -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sccherry/sccherry.github.io.git"
  },
  "author": "Steve Cherry <stevenccherry@gmail.com> (https://stevecherry.net/)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sccherry/sccherry.github.io/issues"
  },
  "homepage": "https://github.com/sccherry/sccherry.github.io#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.5",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-import": "^2.22.0",
    "html-minifier": "^4.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-footnote": "^3.0.2",
    "normalize-opentype.css": "^0.2.4",
    "postcss": "^7.0.32",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "^1.4.6"
  }
}
