---
pageable: true
per_page: 10
---

<% if paginate && prev_page %>
  <ul class="pager">
    <li class="previous"><%= link_to "&larr; #{page_number - 1}", prev_page %></li>
  </ul>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %></h2>
  <%= article.summary %>
<% end %>

<% if paginate && next_page %>
  <ul class="pager">
    <li class="next"><%= link_to "#{page_number + 1} &rarr;", next_page %></li>
  </ul>

  <p>Page <%= page_number %> of <%= num_pages %></p>
<% end %>