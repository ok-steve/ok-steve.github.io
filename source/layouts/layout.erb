    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= current_page.data.title || "The online home of Steve Cherry" %> | Cherry on Top</title>
    <meta name="description" content="The online home of Steve Cherry." >
    <meta name="author" content="Steve Cherry" >
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic,700italic|Source+Code+Pro" %>
