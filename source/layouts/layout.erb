    <div class="container">
      <header role="banner">
        <h1><%= link_to "Cherry on Top", "/index.html" %></h1>

        <nav role="navigation">
          <ul>
            <li><a href="mailto:stevenccherry@gmail.com"><span class="icon-email"></span></a></li>
            <li><a href="http://twitter.com/stevenccherry"><span class="icon-twitter"></span></a></li>
            <li><a href="http://www.linkedin.com/in/sccherry"><span class="icon-linkedin"></span></a></li>
            <li><a href="https://github.com/sccherry"><span class="icon-github"></span></a></li>
          </ul>
        </nav>
      </header>

      <section role="main">
        <%= yield %>
      </section>

      <footer role="contentinfo">
        <p>All content licensed <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/deed.en_US">CC-BY-SA</a>.</p>
      </footer>
    </div>

    <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js", "main" %>
