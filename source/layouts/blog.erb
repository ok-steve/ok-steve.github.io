<% wrap_layout :layout do %>
  <article>
    <h2><%= current_page.data.title %></h2>

    <%= yield %>
  </article>

  <% content_for :css do %>
    <% unless current_page.data.libraries.nil? %>
      <% if current_page.data.libraries.include? "mediaelement" %>
        <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/mediaelement/2.13.1/css/mediaelementplayer.min.css" %>
      <% end %>

      <% if current_page.data.libraries.include? "prettify" %>
        <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.min.css" %>
      <% end %>

      <% if current_page.data.libraries.include? "reveal" %>
        <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/reveal.js/2.5/css/reveal.min.css", "vendor/reveal" %>
      <% end %>
    <% end %>
  <% end %>

  <% content_for :js do %>
    <% unless current_page.data.libraries.nil? %>
      <% if current_page.data.libraries.include? "mediaelement" %>
        <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/mediaelement/2.13.1/js/mediaelement-and-player.min.js", "vendor/mediaelement" %>
      <% end %>

      <% if current_page.data.libraries.include? "prettify" %>
        <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/prettify/r298/run_prettify.min.js", "vendor/prettify" %>
      <% end %>

      <% if current_page.data.libraries.include? "reveal" %>
        <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/reveal.js/2.5/js/reveal.min.js", "vendor/reveal" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
